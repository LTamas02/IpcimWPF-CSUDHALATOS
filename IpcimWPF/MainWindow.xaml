<Window x:Class="IpcimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IpcimWPF" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgData" Grid.Column="0" AutoGenerateColumns="True" Margin="0,0,10,0"/>

        <StackPanel Grid.Column="1">

            <TextBlock Text="Domain-name:"/>
            <TextBox x:Name="tbDomain" Margin="0 0 0 10"/>

            <TextBlock Text="IP cím:"/>
            <TextBox x:Name="tbIp" Margin="0 0 0 20"/>

            <Button Content="Bevitel" Click="btnBevitel_Click" Margin="0 0 0 10"/>
            <Button Content="Mentés" Click="btnMentes_Click"/>

        </StackPanel>
    </Grid>
</Window>